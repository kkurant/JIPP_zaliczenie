@model JIPP_Bookstore.Models.BookModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="input-group">
                <span asp-validation-for="Title" class="input-group-text">Title</span>
                <input asp-for="Title" class="form-control" />
            </div>
            <br />
            <div class="input-group">
                <span asp-validation-for="Author" class="input-group-text">Author</span>
                <input asp-for="Author" class="form-control" />
            </div>
            <br />
            <div class="input-group">
                <span asp-validation-for="Stock" class="input-group-text">Stock</span>
                <input asp-for="Stock" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary btn-sm" asp-action="Remove" asp-route-id="@Model.ID">Remove</a> |
    <a class="btn btn-outline-primary btn-sm" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
